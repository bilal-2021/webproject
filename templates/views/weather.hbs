<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}

    <!----main header---->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-10 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Wednesday</p>
                        <p id="today_date">2 Aug</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- footer code -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        //get current Day Name
        const getCurrentDay = () => {
            const weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

            const d = new Date();
            let curday = weekday[d.getDay()];
            let day = document.getElementById('day');
            day.innerText = curday;
        }

        //Get current date
        const getCurrentDate = () => {
            const month = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

            const date = new Date();
            let name = month[date.getMonth()];
            let todayDate = document.getElementById('today_date');
            todayDate.innerText = `${date.getDay()} ${name}`;
        }
        getCurrentDay();
        getCurrentDate();
    </script>
</body>

</html>